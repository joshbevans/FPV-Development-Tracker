@using FPVDevelopment.Components.Data.Classes
@using FPVDevelopment.Components.Data.Models
@inject CurrentUser currentUser
@rendermode InteractiveServer


<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All">Account</MudNavLink>
    <MudNavLink Href="/History" Match="NavLinkMatch.Prefix" hidden="@_isNavHidden">History</MudNavLink>
    <MudNavLink Href="/AddCompletedRun" Match="NavLinkMatch.Prefix" hidden="@_isNavHidden">Add Completed Run</MudNavLink>
    <MudNavLink Href="/AddMap" Match="NavLinkMatch.Prefix" hidden="@_isNavHidden">Add Map</MudNavLink>
    <MudNavLink Href="/AddDrone" Match="NavLinkMatch.Prefix" hidden="@_isNavHidden">Add Drone</MudNavLink>
</MudNavMenu>


@code {
    protected override void OnInitialized()
    {
        currentUser.CurrentUserChangedEvent += OnCurrentUserChanged;
    }

    private void OnCurrentUserChanged(object? sender, EventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        currentUser.CurrentUserChangedEvent -= OnCurrentUserChanged;
    }

    private bool _isNavHidden =>
        currentUser.User is null;
}